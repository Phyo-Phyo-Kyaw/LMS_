<h1 class="text-2xl font-bold mb-4">📚 Course Lists</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% courses.forEach(course => { %>
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-xl font-semibold"><%= course.name %></h2>
      <p class="text-gray-700 text-sm mt-1"><%= course.description %></p>
      <p class="text-sm mt-2">Level: <%= course.level %></p>
      <p class="text-sm">Price: $<%= course.price %></p>
      <p class="text-sm">
        Certificate: 
        <%= course.certified ? "✅ Yes" : "❌ No" %>
      </p>
    </div>
  <% }) %>
</div>
