<div class="flex items-center mb-6">
  <div class="text-2xl font-bold">Create Course</div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <form class="col-span-1 md:col-span-2 lg:col-span-3 bg-white p-6 rounded shadow-md" action="/courses/store" method="POST">
    <div class="mb-4">
      <label for="courseTitle" class="block text-gray-700 font-semibold mb-2">Course Title</label>
      <input type="text" id="courseTitle" name="courseTitle" required
             class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </div>

    <div class="mb-4">
      <label for="courseDescription" class="block text-gray-700 font-semibold mb-2">Description</label>
      <textarea id="courseDescription" name="courseDescription" rows="4" required
                class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
    </div>

    <div class="mb-4">
      <label for="coursePrice" class="block text-gray-700 font-semibold mb-2">Price</label>
      <input type="number" id="coursePrice" name="coursePrice" min="1" required
             class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </div>

    <div class="mb-4">
      <label for="courseLevel" class="block text-gray-700 font-semibold mb-2">Level</label>
      <select id="courseLevel" name="courseLevel" required
              class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
        <option value="" disabled selected>Select level</option>
        <option value="beginner">Beginner</option>
        <option value="intermediate">Intermediate</option>
        <option value="advanced">Advanced</option>
      </select>
    </div>

    <button type="submit" class="bg-blue-600 text-white font-semibold px-5 py-2 rounded hover:bg-blue-700 transition">
      Create Course
    </button>
  </form>
</div>
